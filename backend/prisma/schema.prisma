// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  googleId    String   @unique
  email       String   @unique
  name        String
  picture     String?
  isPro       Boolean  @default(false)
  isAdmin     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  lastLoginAt DateTime @default(now())

  @@index([email])
  @@index([googleId])
}

model Course {
  id          String     @id @default(cuid())
  name        String     @unique
  description String?
  year        Int?
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  questions   Question[]

  @@index([name])
  @@index([isActive])
}

model Question {
  id           String   @id @default(cuid())
  questionName String
  subject      String
  topic        String
  link         String
  semester     Int      @default(4)
  year         Int?
  courseId     String?
  course       Course?  @relation(fields: [courseId], references: [id], onDelete: SetNull)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([semester])
  @@index([subject])
  @@index([topic])
  @@index([courseId])
  @@index([year])
}

model Notice {
  id        String    @id @default(cuid())
  title     String
  content   String
  priority  String    @default("normal") // low, normal, high
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  expiresAt DateTime?

  @@index([isActive])
  @@index([priority])
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  uniqueKey String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
